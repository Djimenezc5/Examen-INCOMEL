            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CantidadHijos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SalarioBase)
        </td>
